<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:background="#FFFFFF">
    
    <ImageView android:id="@+id/sw_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/state_stopped"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:longClickable="true"/>
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sw_state"
        android:id="@+id/time_text"
        android:textColor="#000000"
        android:textSize="30px"
        android:text=" "
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:longClickable="true"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:padding="10px"
	        android:text="Picture"
	        android:background="#000000"
	        android:layout_weight="1.0"
	        android:textColor="#FFFFFF"
			android:gravity="center"
			android:textSize="16px"
			android:id="@+id/picture_button"
			android:clickable="true"/>
	    
	    <TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:padding="10px"
	        android:text="Emergency"
	        android:background="#FF0000"
	        android:textSize="16px"
	        android:textColor="#FFFFFF"
	        android:layout_weight="1.0"
	        android:id="@+id/emergency_button"
	        android:gravity="center"
	        android:clickable="true"/>

    </LinearLayout>
</RelativeLayout>
